.about-me-wrap
  display flex
  flex-direction column
  margin 2rem auto
  padding 2rem 1rem
  box-sizing border-box
  background-color color-article-background
  border 1px solid lighten(color-grey, 50%)
  border-radius 6px
  box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.07)

  @media mq-mobile
    width auto
    margin 2rem 1rem

.about-me__header
  .avatar
    border-radius 50%
    outline 0
    overflow hidden
    box-shadow 0 6px 10px rgba(0, 0, 0, 0.07)

.socials
  margin-top 2rem

.social-item
  margin-bottom 1rem

  @media mq-mobile
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    width: 18rem;

  .label
    width 2rem
    height 2rem
    display inline-block
    margin 0 .5rem
    vertical-align middle
    img
      width 100%
      height 100%

.about__title
  font-size: gutter-size
  font-weight: bold

.domain
  font-weight: bold
  cursor pointer

.about-author
  margin-top: 2rem
  
  display: flex
  align-items: center

  span
    font-weight: bold
    margin-right: 1rem

  .button
    margin-left: 2rem
    background-color: #a7b0b3
    border-radius: 12px
    color: white
    padding: 0 0.8rem